
<canvas id="crossEntropyCanvas"></canvas>
<script>
    const crossEntropyCanvas = document.getElementById('crossEntropyCanvas');
    const dataJSON = '<%= JSON.stringify(crossEntropy.map((item) => parseInt(item.crossEntropy))) %>';
    const dataNumber = JSON.parse(dataJSON);
    const crossEntropyChar = new Chart(crossEntropyCanvas, {
        type: 'line',
        data: {
            labels: dataNumber.map((item, index) => `expl_${index+1}`),
            datasets: [{
                label: 'Cross Entropy',
                data: dataNumber,
                borderColor: 'rgb(75, 192, 192)',
                fill: false,
                tension: 0.1
            }, {
                label: 'Weak Exploration',
                data: dataNumber.map((item) => 3),
                borderColor: 'rgb(255, 0, 0)',
                fill: true,
                borderDash: [10, 10],
                pointBorderWidth: 0,
                pointRadius: 0,
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top'
                },
                title: {
                    display: true,
                    text: 'Efficiency of the explorations',
                    font: {
                        size: 26
                    }
                }
            }
        }
    });

</script>
